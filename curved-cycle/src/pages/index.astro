<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkyTravel - Book Your Perfect Flight</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: #667eea;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
        }

        .nav-links a {
            text-decoration: none;
            color: #333;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: #667eea;
        }

        .hero {
            padding: 8rem 0 4rem;
            text-align: center;
            color: white;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            opacity: 0;
            animation: fadeInUp 1s ease 0.3s forwards;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0;
            animation: fadeInUp 1s ease 0.5s forwards;
        }

        .booking-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 2.5rem;
            margin: 2rem auto;
            max-width: 900px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            opacity: 0;
            animation: fadeInUp 1s ease 0.7s forwards;
        }

        .trip-type {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .trip-type input[type="radio"] {
            display: none;
        }

        .trip-type label {
            padding: 0.8rem 1.5rem;
            background: #f8f9fa;
            border: 2px solid transparent;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .trip-type input[type="radio"]:checked + label {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .booking-form {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .form-group {
            position: relative;
        }

        .form-group label {
            position: absolute;
            top: -8px;
            left: 15px;
            background: white;
            padding: 0 5px;
            font-size: 0.8rem;
            color: #667eea;
            font-weight: 500;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 1rem 1.2rem;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .passenger-class {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .search-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 1.2rem 3rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .search-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
        }

        .features {
            background: white;
            padding: 5rem 0;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .feature-card {
            text-align: center;
            padding: 2rem;
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .popular-destinations {
            background: #f8f9fa;
            padding: 5rem 0;
        }

        .destinations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-top: 3rem;
        }

        .destination-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .destination-card:hover {
            transform: translateY(-8px);
        }

        .destination-image {
            height: 200px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            font-weight: 600;
        }

        .destination-info {
            padding: 1.5rem;
        }

        .price {
            color: #667eea;
            font-weight: 700;
            font-size: 1.2rem;
        }

        footer {
            background: #2c3e50;
            color: white;
            text-align: center;
            padding: 3rem 0;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .booking-form {
                grid-template-columns: 1fr;
            }

            .passenger-class {
                grid-template-columns: 1fr;
            }

            .nav-links {
                display: none;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="container">
            <a href="#" class="logo">✈️ SkyTravel</a>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#flights">Flights</a></li>
                <li><a href="#deals">Deals</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section id="home" class="hero">
            <div class="container">
                <h1>Discover Your Next Adventure</h1>
                <p>Find and book the perfect flight at unbeatable prices</p>

                <div class="booking-card">
                    <div class="trip-type">
                        <input type="radio" id="roundtrip" name="trip" value="roundtrip" checked>
                        <label for="roundtrip">Round Trip</label>
                        
                        <input type="radio" id="oneway" name="trip" value="oneway">
                        <label for="oneway">One Way</label>
                        
                        <input type="radio" id="multicity" name="trip" value="multicity">
                        <label for="multicity">Multi City</label>
                    </div>

                    <form class="booking-form" id="flightForm">
                        <div class="form-group">
                            <label for="from">From</label>
                            <input type="text" id="from" placeholder="Departure city" required>
                        </div>

                        <div class="form-group">
                            <label for="to">To</label>
                            <input type="text" id="to" placeholder="Destination city" required>
                        </div>

                        <div class="form-group">
                            <label for="departure">Departure</label>
                            <input type="date" id="departure" required>
                        </div>

                        <div class="form-group" id="returnGroup">
                            <label for="return">Return</label>
                            <input type="date" id="return">
                        </div>

                        <div class="passenger-class">
                            <div class="form-group">
                                <label for="passengers">Passengers</label>
                                <select id="passengers">
                                    <option value="1">1 Passenger</option>
                                    <option value="2">2 Passengers</option>
                                    <option value="3">3 Passengers</option>
                                    <option value="4">4+ Passengers</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="class">Class</label>
                                <select id="class">
                                    <option value="economy">Economy</option>
                                    <option value="business">Business</option>
                                    <option value="first">First Class</option>
                                </select>
                            </div>
                        </div>
                    </form>

                    <button type="submit" class="search-btn" onclick="searchFlights()">
                        🔍 Search Flights
                    </button>
                </div>
            </div>
        </section>

        <section class="features">
            <div class="container">
                <h2 style="text-align: center; font-size: 2.5rem; margin-bottom: 1rem; color: #2c3e50;">Why Choose SkyTravel?</h2>
                <p style="text-align: center; color: #666; font-size: 1.1rem;">Experience hassle-free booking with our premium services</p>
                
                <div class="features-grid">
                    <div class="feature-card">
                        <div class="feature-icon">💰</div>
                        <h3>Best Prices</h3>
                        <p>Compare millions of flights and find the best deals with our price guarantee</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">🚀</div>
                        <h3>Fast Booking</h3>
                        <p>Book your flight in under 3 minutes with our streamlined booking process</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">🛡️</div>
                        <h3>Secure Payment</h3>
                        <p>Your transactions are protected with bank-level security encryption</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">📞</div>
                        <h3>24/7 Support</h3>
                        <p>Get help anytime with our round-the-clock customer support team</p>
                    </div>
                </div>
            </div>
        </section>

        <section id="deals" class="popular-destinations">
            <div class="container">
                <h2 style="text-align: center; font-size: 2.5rem; margin-bottom: 1rem; color: #2c3e50;">Popular Destinations</h2>
                <p style="text-align: center; color: #666; font-size: 1.1rem;">Discover amazing places at incredible prices</p>
                
                <div class="destinations-grid">
                    <div class="destination-card">
                        <div class="destination-image">🗽 NYC</div>
                        <div class="destination-info">
                            <h3>New York City</h3>
                            <p>The city that never sleeps</p>
                            <div class="price">From $299</div>
                        </div>
                    </div>
                    <div class="destination-card">
                        <div class="destination-image">🗼 Paris</div>
                        <div class="destination-info">
                            <h3>Paris, France</h3>
                            <p>City of lights and love</p>
                            <div class="price">From $449</div>
                        </div>
                    </div>
                    <div class="destination-card">
                        <div class="destination-image">🌸 Tokyo</div>
                        <div class="destination-info">
                            <h3>Tokyo, Japan</h3>
                            <p>Where tradition meets future</p>
                            <div class="price">From $599</div>
                        </div>
                    </div>
                    <div class="destination-card">
                        <div class="destination-image">🏖️ Bali</div>
                        <div class="destination-info">
                            <h3>Bali, Indonesia</h3>
                            <p>Tropical paradise awaits</p>
                            <div class="price">From $399</div>
                        </div>
                    </div>
                    <div class="destination-card">
                        <div class="destination-image">🏛️ Rome</div>
                        <div class="destination-info">
                            <h3>Rome, Italy</h3>
                            <p>Eternal city of history</p>
                            <div class="price">From $379</div>
                        </div>
                    </div>
                    <div class="destination-card">
                        <div class="destination-image">🦘 Sydney</div>
                        <div class="destination-info">
                            <h3>Sydney, Australia</h3>
                            <p>Harbor city down under</p>
                            <div class="price">From $799</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer id="contact">
        <div class="container">
            <h3>Ready to explore the world?</h3>
            <p>Join millions of travelers who trust SkyTravel for their journey</p>
            <p style="margin-top: 2rem; opacity: 0.8;">&copy; 2024 SkyTravel. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Set minimum date to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('departure').min = today;
        document.getElementById('return').min = today;

        // Handle trip type changes
        document.querySelectorAll('input[name="trip"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const returnGroup = document.getElementById('returnGroup');
                if (this.value === 'oneway' || this.value === 'multicity') {
                    returnGroup.style.display = 'none';
                } else {
                    returnGroup.style.display = 'block';
                }
            });
        });

        // Handle departure date change
        document.getElementById('departure').addEventListener('change', function() {
            const returnInput = document.getElementById('return');
            returnInput.min = this.value;
            if (returnInput.value && returnInput.value < this.value) {
                returnInput.value = this.value;
            }
        });

        // Search flights function
        function searchFlights() {
            const form = document.getElementById('flightForm');
            const formData = new FormData(form);
            
            // Basic form validation
            const from = document.getElementById('from').value;
            const to = document.getElementById('to').value;
            const departure = document.getElementById('departure').value;
            
            if (!from || !to || !departure) {
                alert('Please fill in all required fields');
                return;
            }

            // Simulate search with loading state
            const searchBtn = document.querySelector('.search-btn');
            const originalText = searchBtn.innerHTML;
            
            searchBtn.innerHTML = '⏳ Searching...';
            searchBtn.disabled = true;
            
            setTimeout(() => {
                alert(`Searching flights from ${from} to ${to} on ${departure}. In a real application, this would redirect to results page.`);
                searchBtn.innerHTML = originalText;
                searchBtn.disabled = false;
            }, 2000);
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.background = 'rgba(255, 255, 255, 0.98)';
            } else {
                header.style.background = 'rgba(255, 255, 255, 0.95)';
            }
        });
    </script>
</body>
</html>